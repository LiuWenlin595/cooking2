/* pages/recipe/detail/detail.wxss */
.detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 菜谱头部 */
.recipe-header {
  position: relative;
  width: 100%;
  height: 500rpx;
  overflow: hidden;
}

.recipe-image {
  width: 100%;
  height: 100%;
}

.recipe-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.7) 100%);
  padding: 40rpx 30rpx 30rpx;
  color: #fff;
}

.recipe-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.recipe-tags {
  display: flex;
  gap: 15rpx;
}

.tag {
  padding: 6rpx 16rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 菜谱信息 */
.recipe-info {
  padding: 30rpx;
}

.info-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.info-item {
  margin-bottom: 30rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-row {
  display: flex;
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.info-row .info-item {
  flex: 1;
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.value {
  display: block;
  font-size: 28rpx;
  color: #333;
}

.link-btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f0f9;
  border-radius: 10rpx;
  color: #9b59b6;
  font-size: 28rpx;
}

.arrow {
  font-size: 32rpx;
}

/* 操作按钮 */
.action-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  flex: 1;
  padding: 25rpx;
  border-radius: 15rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
}

.add-cart-btn {
  background-color: #fff;
  color: #9b59b6;
  border: 2rpx solid #9b59b6;
}

.order-btn {
  background-color: #9b59b6;
  color: #fff;
}

/* 管理员操作 */
.admin-actions {
  display: flex;
  gap: 20rpx;
}

.admin-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 15rpx;
  text-align: center;
  font-size: 28rpx;
}

.edit-btn {
  background-color: #3498db;
  color: #fff;
}

.delete-btn {
  background-color: #e74c3c;
  color: #fff;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
