/* pages/cart/cart.wxss */
.cart-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 150rpx;
}

/* 购物车内容区 */
.cart-content {
  padding: 20rpx;
}

/* 购物车头部 */
.cart-header {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 20rpx 20rpx 0 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.clear-btn {
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 20rpx;
  font-size: 26rpx;
}

/* 购物车列表 */
.cart-list {
  background-color: #fff;
  border-radius: 0 0 20rpx 20rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.cart-item:last-child {
  border-bottom: none;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.item-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-price {
  font-size: 24rpx;
  color: #999;
}

.item-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 15rpx;
}

/* 数量控制 */
.quantity-control {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.control-btn {
  width: 50rpx;
  height: 50rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
  font-weight: bold;
}

.control-btn:active {
  background-color: #e0e0e0;
}

.quantity-text {
  min-width: 50rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.item-total {
  font-size: 30rpx;
  color: #9b59b6;
  font-weight: bold;
}

/* 空状态 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 50rpx;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-action {
  padding: 20rpx 60rpx;
  background-color: #9b59b6;
  color: #fff;
  border-radius: 50rpx;
  font-size: 28rpx;
}

/* 底部结算栏 */
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
}

.footer-info {
  flex: 1;
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}

.total-label {
  font-size: 28rpx;
  color: #666;
}

.total-price {
  font-size: 40rpx;
  color: #9b59b6;
  font-weight: bold;
}

.total-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.checkout-btn {
  padding: 20rpx 50rpx;
  background-color: #9b59b6;
  color: #fff;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.checkout-btn:active {
  background-color: #8e44ad;
}
