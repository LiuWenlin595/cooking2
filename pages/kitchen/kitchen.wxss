/* pages/kitchen/kitchen.wxss */
.kitchen-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 200rpx;
}

/* 顶部店铺信息 */
.header-section {
  position: relative;
  height: 300rpx;
  overflow: hidden;
}

.header-bg {
  width: 100%;
  height: 100%;
  opacity: 0.3;
}

.shop-info {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(155, 89, 182, 0.8) 0%, rgba(155, 89, 182, 0.4) 100%);
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
}

.shop-header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.shop-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.shop-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 4rpx solid #fff;
}

.shop-details {
  display: flex;
  flex-direction: column;
  color: #fff;
}

.shop-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.kitchen-name {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.shop-intro {
  font-size: 24rpx;
  opacity: 0.8;
}

.shop-right {
  display: flex;
  gap: 20rpx;
}

.icon-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  font-size: 32rpx;
}

/* 功能导航栏 */
.nav-bar {
  background-color: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nav-tabs {
  display: flex;
  gap: 40rpx;
}

.nav-tab {
  padding: 10rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.nav-tab.active {
  color: #9b59b6;
  font-weight: bold;
}

.nav-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background-color: #9b59b6;
}

.nav-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  padding: 10rpx 20rpx;
  background-color: #9b59b6;
  color: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.action-btn.disabled {
  background-color: #ccc;
  opacity: 0.7;
}

.search-btn {
  background-color: transparent;
  color: #9b59b6;
  border: 2rpx solid #9b59b6;
}

/* 搜索框 */
.search-box {
  background-color: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-input {
  flex: 1;
  padding: 15rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.search-close {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
}

/* 主内容区域 */
.content-section {
  display: flex;
  margin-top: 20rpx;
}

/* 分类侧边栏 */
.category-sidebar {
  width: 180rpx;
  background-color: #fff;
  padding: 20rpx 0;
}

.category-item {
  padding: 25rpx 20rpx;
  font-size: 26rpx;
  color: #666;
  text-align: center;
  border-left: 4rpx solid transparent;
  transition: all 0.3s;
}

.category-item.active {
  color: #9b59b6;
  font-weight: bold;
  background-color: #f5f0f9;
  border-left-color: #9b59b6;
}

/* 菜谱列表 */
.recipe-list {
  flex: 1;
  padding: 0 20rpx;
}

.recipe-card {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  display: flex;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.recipe-image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.recipe-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.recipe-header {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.recipe-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.must-have-tag {
  padding: 4rpx 12rpx;
  background-color: #ff6b6b;
  color: #fff;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.recipe-meta {
  display: flex;
  gap: 20rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.recipe-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15rpx;
}

.recipe-tags {
  display: flex;
  gap: 10rpx;
}

.tag {
  padding: 4rpx 12rpx;
  background-color: #f0f0f0;
  color: #666;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.add-btn {
  width: 60rpx;
  height: 60rpx;
  background-color: #9b59b6;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
}

.edit-actions {
  display: flex;
  gap: 15rpx;
}

.edit-btn, .delete-btn {
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.edit-btn {
  background-color: #3498db;
  color: #fff;
}

.delete-btn {
  background-color: #e74c3c;
  color: #fff;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
}

.empty-tip {
  font-size: 24rpx;
  color: #999;
}

.empty-action {
  margin-top: 30rpx;
  padding: 15rpx 40rpx;
  background-color: #9b59b6;
  color: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
  display: inline-block;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.cart-icon {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.cart-count {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  min-width: 30rpx;
  height: 30rpx;
  background-color: #ff6b6b;
  color: #fff;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  padding: 0 8rpx;
}

.action-buttons {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.invite-btn {
  padding: 15rpx 30rpx;
  border: 2rpx solid #9b59b6;
  color: #9b59b6;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.order-btn {
  padding: 15rpx 40rpx;
  background-color: #ccc;
  color: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.order-btn.active {
  background-color: #9b59b6;
}
