<!--pages/shop/category-list/category-list.wxml-->
<view class="category-list-page">
  <view class="header">
    <text class="title">分类管理</text>
    <text class="subtitle">管理菜谱分类</text>
  </view>

  <view class="category-list">
    <view class="category-card" wx:for="{{categories}}" wx:key="id">
      <view class="category-info">
        <text class="category-name">{{item.name}}</text>
      </view>
      
      <view class="category-actions">
        <view class="action-btn edit-btn" 
              data-id="{{item.id}}" 
              bindtap="editCategory">
          <text>编辑</text>
        </view>
        <view class="action-btn delete-btn" 
              data-id="{{item.id}}" 
              bindtap="deleteCategory">
          <text>删除</text>
        </view>
      </view>
    </view>

    <view class="empty" wx:if="{{categories.length === 0}}">
      <text class="empty-text">暂无分类</text>
      <text class="empty-tip">点击下方按钮添加分类</text>
    </view>
  </view>

  <!-- 添加按钮 -->
  <view class="add-section">
    <view class="add-btn" bindtap="addCategory">
      <text>+ 添加分类</text>
    </view>
  </view>
</view>
