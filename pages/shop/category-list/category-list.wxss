/* pages/shop/category-list/category-list.wxss */
.category-list-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 150rpx;
}

/* 头部 */
.header {
  background-color: #fff;
  padding: 40rpx 30rpx 30rpx;
  margin-bottom: 20rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #999;
}

/* 分类列表 */
.category-list {
  padding: 0 30rpx;
}

.category-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.category-info {
  display: flex;
  align-items: center;
}

.category-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.category-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  padding: 10rpx 25rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  background-color: #f5f5f5;
  color: #666;
}

.edit-btn {
  background-color: #e8f5e9;
  color: #4caf50;
}

.delete-btn {
  background-color: #ffebee;
  color: #f44336;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 100rpx 50rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.empty-tip {
  display: block;
  font-size: 26rpx;
  color: #ccc;
}

/* 添加按钮 */
.add-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.add-btn {
  width: 100%;
  padding: 25rpx;
  background-color: #9b59b6;
  color: #fff;
  border-radius: 30rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
}
