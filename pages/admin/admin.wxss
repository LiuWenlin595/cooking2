/* pages/admin/admin.wxss */
.admin-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 150rpx;
}

/* 头部 */
.admin-header {
  background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
  padding: 60rpx 30rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
}

.header-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
}

.header-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

.admin-badge {
  padding: 10rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  font-size: 24rpx;
}

/* 数据统计 */
.stats-section {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  margin-top: -20rpx;
}

.stat-card {
  flex: 1;
  background-color: #fff;
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(155, 89, 182, 0.1);
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #9b59b6;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 管理功能区 */
.manage-section {
  margin: 30rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.manage-card {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.card-icon {
  font-size: 60rpx;
}

.card-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.card-desc {
  font-size: 24rpx;
  color: #999;
}

.card-arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 快捷操作 */
.quick-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background-color: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  width: 100%;
  padding: 25rpx;
  border-radius: 30rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}

.action-btn.primary {
  background-color: #9b59b6;
  color: #fff;
}

.action-btn.primary:active {
  background-color: #8e44ad;
}
