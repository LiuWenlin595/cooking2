/* pages/admin/recipe-manage/recipe-manage.wxss */
.recipe-manage-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 150rpx;
}

/* 筛选区域 */
.filter-section {
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.search-box {
  margin-bottom: 20rpx;
}

.search-input {
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: inline-flex;
  gap: 15rpx;
}

.category-item {
  display: inline-block;
  padding: 15rpx 30rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.category-item.active {
  background-color: #9b59b6;
  color: #fff;
}

/* 菜谱列表 */
.recipe-list {
  padding: 0 30rpx;
}

.recipe-card {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.recipe-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 15rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.recipe-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 10rpx;
}

.recipe-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}

.recipe-category {
  padding: 5rpx 15rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #999;
  margin-left: 10rpx;
}

.info-meta {
  display: flex;
  gap: 20rpx;
  margin-bottom: 15rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #999;
}

.info-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  padding: 10rpx 25rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.action-btn.edit {
  background-color: #e8f5e9;
  color: #4caf50;
}

.action-btn.delete {
  background-color: #ffebee;
  color: #f44336;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 150rpx 50rpx;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.empty-tip {
  display: block;
  font-size: 26rpx;
  color: #ccc;
}

/* 添加按钮 */
.add-button {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background-color: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.add-button text {
  display: block;
  width: 100%;
  padding: 25rpx;
  background-color: #9b59b6;
  color: #fff;
  border-radius: 30rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}
